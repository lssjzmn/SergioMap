<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="navibottom">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:clickable">true</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:shadowDx">3.0</item>
        <item name="android:shadowDy">3.0</item>
    </style>

    <style name="tabPageIndicator">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>