<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simplelay0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/itemlay"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/simpleimg0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:contentDescription="@string/app_name"
        android:paddingBottom="7dp"
        android:paddingRight="25dp"
        android:paddingTop="7dp" />

    <LinearLayout
        android:id="@+id/linearo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/simpletxt0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/simpletxt01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:padding="3dp"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/simpleimg0_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/app_name"
        android:paddingBottom="7dp"
        android:paddingRight="10dp" />

    <ImageView
        android:id="@+id/simpleimg0_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/app_name"
        android:paddingBottom="7dp"
        android:paddingRight="10dp" />

</LinearLayout>